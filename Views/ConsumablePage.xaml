<Page x:Class="AdminUP.Views.ConsumablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Расходные материалы">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Добавить" Width="100"/>
            <Button Content="Редактировать" Width="120"/>
            <Button Content="Удалить" Width="100"/>
            <TextBox x:Name="SearchTextBox" Width="220" Margin="0,0,10,0"/>

        </StackPanel>

        <DataGrid Grid.Row="1" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50"/>
                <DataGridTextColumn Header="Название" Width="200"/>
                <DataGridTextColumn Header="Количество" Width="80"/>
                <DataGridTextColumn Header="Дата поступления" Width="120"/>
                <DataGridTextColumn Header="Тип" Width="100"/>
                <DataGridTextColumn Header="Ответственный" Width="120"/>
                <DataGridTextColumn Header="Прикреплено к" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>