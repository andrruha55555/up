<Page x:Class="AdminUP.Views.EquipmentSoftwarePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Loaded="Page_Loaded"
      d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Фильтры -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Оборудование:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox x:Name="EquipmentComboBox"
                      Width="260"
                      Margin="0,0,15,0"
                      ItemsSource="{Binding EquipmentList}"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding SelectedEquipmentId}"
                      SelectionChanged="EquipmentComboBox_SelectionChanged"/>

            <TextBlock Text="ПО:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox x:Name="SoftwareComboBox"
                      Width="260"
                      Margin="0,0,15,0"
                      ItemsSource="{Binding SoftwareList}"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding SelectedSoftwareId}"
                      SelectionChanged="SoftwareComboBox_SelectionChanged"/>
        </StackPanel>

        <!-- Поиск (если нужен именно на странице) -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="SearchTextBox"
                     Width="400"
                     Margin="0,0,10,0"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Найти" Width="90" Margin="0,0,8,0" Click="SearchButton_Click"/>
            <Button Content="Очистить" Width="90" Click="ClearButton_Click"/>
        </StackPanel>

        <!-- Таблица -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding FilteredEquipmentSoftwareList}"
                  SelectedItem="{Binding SelectedEquipmentSoftware}"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  MouseDoubleClick="DataGrid_MouseDoubleClick"/>
    </Grid>
</Page>
