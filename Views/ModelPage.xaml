<Page x:Class="AdminUP.Views.ModelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="clr-namespace:AdminUP.Converters"
      Title="Модели оборудования"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Добавить" Width="100" Click="AddButton_Click"/>
            <Button Content="Редактировать" Width="120" Click="EditButton_Click"/>
            <Button Content="Удалить" Width="100" Click="DeleteButton_Click"/>
            <TextBox x:Name="SearchTextBox" Width="200" Margin="10 0"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Найти" Width="80" Click="SearchButton_Click"/>
            <Button Content="Очистить" Width="80" Margin="5,0,0,0" Click="ClearButton_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="1" Margin="10"
                  ItemsSource="{Binding FilteredModelList}"
                  SelectedItem="{Binding SelectedModel}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  MouseDoubleClick="DataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="60"/>
                <DataGridTextColumn Header="Название модели" Binding="{Binding name}" Width="260"/>
                <!-- Это вычисляемое поле из VM (оставляем как есть) -->
                <DataGridTextColumn Header="Тип оборудования" Binding="{Binding EquipmentTypeName}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>