<Page x:Class="AdminUP.Views.ConsumableCharacteristicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Характеристики расходных материалов">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Добавить" Width="100"/>
            <Button Content="Редактировать" Width="120"/>
            <Button Content="Удалить" Width="100"/>
            <ComboBox x:Name="ConsumableComboBox"
          Width="150"
          Margin="10 0"
          SelectionChanged="ConsumableComboBox_SelectionChanged"/>
            <TextBox x:Name="SearchTextBox" Width="220" Margin="0,0,10,0"/>

        </StackPanel>

        <DataGrid Grid.Row="1" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50"/>
                <DataGridTextColumn Header="Расходник ID" Width="80"/>
                <DataGridTextColumn Header="Название хар-ки" Width="200"/>
                <DataGridTextColumn Header="Значение" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>