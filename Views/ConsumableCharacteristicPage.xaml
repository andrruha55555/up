<Page x:Class="AdminUP.Views.ConsumableCharacteristicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Добавить" Width="100" Click="AddButton_Click"/>
            <Button Content="Редактировать" Width="120" Click="EditButton_Click" Margin="5,0,0,0"/>
            <Button Content="Удалить" Width="100" Click="DeleteButton_Click" Margin="5,0,0,0"/>

            <TextBox x:Name="SearchTextBox" Width="220" Margin="15,0,0,0"
             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

            <Button Content="Найти" Width="80" Margin="5,0,0,0" Click="SearchButton_Click"/>
            <Button Content="Очистить" Width="90" Margin="5,0,0,0" Click="ClearButton_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding FilteredCharacteristicList}"
                  SelectedItem="{Binding SelectedCharacteristic}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  MouseDoubleClick="DataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="70"/>
                <DataGridTextColumn Header="Расходник ID" Binding="{Binding consumable_id}" Width="120"/>
                <DataGridTextColumn Header="Название" Binding="{Binding characteristic_name}" Width="*"/>
                <DataGridTextColumn Header="Значение" Binding="{Binding characteristic_value}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>