<Page x:Class="AdminUP.Views.ConsumableCharacteristicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Loaded="Page_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Расходник:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox x:Name="ConsumableComboBox"
                      Width="250"
                      SelectionChanged="ConsumableComboBox_SelectionChanged"
                      DisplayMemberPath="name"
                      SelectedValuePath="id"
                      Margin="0,0,15,0"/>

            <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="SearchTextBox"
                     Width="300"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,0,10,0"/>

            <Button Content="Найти" Click="SearchButton_Click" Width="80" Margin="0,0,5,0"/>
            <Button Content="Очистить" Click="ClearButton_Click" Width="90"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding FilteredCharacteristicList}"
                  SelectedItem="{Binding SelectedCharacteristic}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  MouseDoubleClick="DataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="70"/>
                <DataGridTextColumn Header="Расходник ID" Binding="{Binding consumable_id}" Width="120"/>
                <DataGridTextColumn Header="Название" Binding="{Binding characteristic_name}" Width="*"/>
                <DataGridTextColumn Header="Значение" Binding="{Binding characteristic_value}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>