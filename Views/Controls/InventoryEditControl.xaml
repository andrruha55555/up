<UserControl x:Class="AdminUP.Views.Controls.InventoryEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdminUP.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="500">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Редактирование инвентаризации" Style="{StaticResource HeaderText}"/>

        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:*" Style="{StaticResource LabelText}"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding InventoryName, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="5" MaxLength="100" Tag="Например: Годовая инвентаризация 2026"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Дата начала:*" Style="{StaticResource LabelText}"/>
            <DatePicker Grid.Row="1" Grid.Column="1" SelectedDate="{Binding StartDate}" 
                       Margin="5" FirstDayOfWeek="Monday"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Дата окончания:*" Style="{StaticResource LabelText}"/>
            <DatePicker Grid.Row="2" Grid.Column="1" SelectedDate="{Binding EndDate}" 
                       Margin="5" FirstDayOfWeek="Monday"/>
        </Grid>

        <ItemsControl Grid.Row="2" ItemsSource="{Binding ValidationErrors}" >
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Style="{StaticResource ErrorText}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
