<UserControl x:Class="AdminUP.Views.Controls.UserEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="500">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Редактирование пользователя" 
                   FontSize="18" FontWeight="Bold" Margin="0 0 0 20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Логин:*" Margin="5"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Пароль:*" Margin="5"/>
                <PasswordBox x:Name="PasswordBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Роль:*" Margin="5"/>
                <ComboBox Grid.Row="2" Grid.Column="1" 
                          SelectedItem="{Binding Role}" Margin="5">
                    <ComboBoxItem Content="admin"/>
                    <ComboBoxItem Content="teacher"/>
                    <ComboBoxItem Content="staff"/>
                </ComboBox>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Фамилия:*" Margin="5"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Имя:*" Margin="5"/>
                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="Отчество:" Margin="5"/>
                <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding MiddleName, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <TextBlock Grid.Row="6" Grid.Column="0" Text="Email:*" Margin="5"/>
                <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <TextBlock Grid.Row="7" Grid.Column="0" Text="Телефон:" Margin="5"/>
                <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                <TextBlock Grid.Row="8" Grid.Column="0" Text="Адрес:" Margin="5"/>
                <TextBox Grid.Row="8" Grid.Column="1" Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" 
                         Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="5"/>

                <TextBlock Grid.Row="9" Grid.Column="0" Text="* - обязательные поля" 
                           Foreground="Gray" FontStyle="Italic" Margin="5"/>

                <StackPanel Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" 
                            Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                    <Button x:Name="SaveButton" Content="Сохранить" Width="100" Margin="5" Click="SaveButton_Click"/>
                    <Button x:Name="CancelButton" Content="Отмена" Width="100" Margin="5" Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>