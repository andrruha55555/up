<UserControl x:Class="AdminUP.Views.Controls.NetworkSettingEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdminUP.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="500">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Редактирование сетевых настроек" Style="{StaticResource HeaderText}"/>

        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Оборудование:*" Style="{StaticResource LabelText}"/>
            <ComboBox Grid.Row="0" Grid.Column="1" 
                      ItemsSource="{Binding AvailableEquipment}"
                      DisplayMemberPath="name"
                      SelectedValuePath="id"
                      SelectedValue="{Binding EquipmentId}"
                      Margin="5"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="IP адрес:*" Style="{StaticResource LabelText}"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding IpAddress, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="5" MaxLength="15" Tag="Например: 192.168.1.101"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Маска подсети:*" Style="{StaticResource LabelText}"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SubnetMask, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="5" MaxLength="15" Tag="Например: 255.255.255.0"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Шлюз:*" Style="{StaticResource LabelText}"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Gateway, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="5" MaxLength="15" Tag="Например: 192.168.1.1"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="DNS1:" Style="{StaticResource LabelText}"/>
            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Dns1, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="5" MaxLength="15" Tag="Например: 8.8.8.8"/>

            <TextBlock Grid.Row="5" Grid.Column="0" Text="DNS2:" Style="{StaticResource LabelText}"/>
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Dns2, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="5" MaxLength="15" Tag="Например: 1.1.1.1"/>
        </Grid>

        <ItemsControl Grid.Row="2" ItemsSource="{Binding ValidationErrors}" >
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Style="{StaticResource ErrorText}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
