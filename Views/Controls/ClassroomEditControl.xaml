<UserControl x:Class="AdminUP.Views.Controls.ClassroomEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdminUP.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="500">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Редактирование аудитории" 
                   Style="{StaticResource HeaderText}"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Название:*" Style="{StaticResource LabelText}"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="5" Tag="Введите полное название аудитории"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Сокращение:*" Style="{StaticResource LabelText}"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ShortName, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="5" MaxLength="20" Tag="Например: 301, 205"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Ответственный:" Style="{StaticResource LabelText}"/>
                <ComboBox Grid.Row="2" Grid.Column="1" 
                          ItemsSource="{Binding AvailableUsers}"
                          DisplayMemberPath="FullName"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding ResponsibleUserId}"
                          Margin="5">
                    <ComboBoxItem Content="Не назначен" Tag="0"/>
                </ComboBox>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Временный ответственный:" Style="{StaticResource LabelText}"/>
                <ComboBox Grid.Row="3" Grid.Column="1" 
                          ItemsSource="{Binding AvailableUsers}"
                          DisplayMemberPath="FullName"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding TempResponsibleUserId}"
                          Margin="5">
                    <ComboBoxItem Content="Не назначен" Tag="0"/>
                </ComboBox>

                <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" 
                           Text="* - обязательные поля" 
                           Style="{StaticResource ErrorText}" Foreground="Gray" FontStyle="Italic"/>
            </Grid>
        </ScrollViewer>

        <!-- Ошибки валидации -->
        <ItemsControl Grid.Row="2" ItemsSource="{Binding ValidationErrors}" 
                      Margin="5" Visibility="{Binding HasErrors, Converter={StaticResource BoolToVis}}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Style="{StaticResource ErrorText}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
