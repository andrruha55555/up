<UserControl x:Class="AdminUP.Views.Controls.EquipmentDetailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdminUP.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="Детальная информация" FontSize="18" FontWeight="Bold"/>
            <Button Content="📋 Копировать" Margin="20 0 0 0" Click="CopyToClipboard_Click"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" FontWeight="Bold" Margin="5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding id}" Margin="5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Название:" FontWeight="Bold" Margin="5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding name}" Margin="5"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Инвентарный номер:" FontWeight="Bold" Margin="5"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding InventoryNumber}" Margin="5"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Стоимость:" FontWeight="Bold" Margin="5"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding cost, StringFormat={}{0:N2} руб.}" Margin="5"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Дата создания:" FontWeight="Bold" Margin="5"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding createdAt, StringFormat={}{0:dd.MM.yyyy HH:mm}}" Margin="5"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Статус:" FontWeight="Bold" Margin="5"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding statusId}" Margin="5"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Модель:" FontWeight="Bold" Margin="5"/>
                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding modelId}" Margin="5"/>

                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Комментарий:" FontWeight="Bold" Margin="5"/>
                    <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding Comment}" 
                             IsReadOnly="True" BorderThickness="0" Background="Transparent"
                             TextWrapping="Wrap" Height="100" Margin="5"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
