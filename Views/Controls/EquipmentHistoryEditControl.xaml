<UserControl x:Class="AdminUP.Views.Controls.EquipmentHistoryEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdminUP.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Редактирование истории оборудования" Style="{StaticResource HeaderText}"/>

        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Оборудование:*" Style="{StaticResource LabelText}"/>
            <ComboBox Grid.Row="0" Grid.Column="1" 
                      ItemsSource="{Binding AvailableEquipment}"
                      DisplayMemberPath="name"
                      SelectedValuePath="id"
                      SelectedValue="{Binding EquipmentId}"
                      Margin="5"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Аудитория:" Style="{StaticResource LabelText}"/>
            <ComboBox Grid.Row="1" Grid.Column="1" 
                      ItemsSource="{Binding AvailableClassrooms}"
                      DisplayMemberPath="name"
                      SelectedValuePath="id"
                      SelectedValue="{Binding ClassroomId}"
                      Margin="5"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Ответственный:" Style="{StaticResource LabelText}"/>
            <ComboBox Grid.Row="2" Grid.Column="1" 
                      ItemsSource="{Binding AvailableUsers}"
                      DisplayMemberPath="FullName"
                      SelectedValuePath="id"
                      SelectedValue="{Binding ResponsibleUserId}"
                      Margin="5"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Комментарий:" Style="{StaticResource LabelText}"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="5" Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                     Tag="Введите комментарий к изменению"/>
        </Grid>

        <ItemsControl Grid.Row="2" ItemsSource="{Binding ValidationErrors}" >
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Style="{StaticResource ErrorText}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>