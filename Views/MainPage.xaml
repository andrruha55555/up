<Window x:Class="AdminUP.MainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AdminUP - Панель управления" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <!-- Верхняя панель -->
        <Border Height="60" Background="#0060AC" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" Margin="20 0">
                <TextBlock Text="🏢 AdminUP" Foreground="White" FontSize="22" 
                           FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock Text=" | Панель управления всеми таблицами" 
                           Foreground="White" FontSize="16" 
                           Margin="10 0 0 0" VerticalAlignment="Center"/>
                <TextBlock Text="Пользователь: Администратор" 
                           Foreground="White" FontSize="14" 
                           Margin="700 0 0 0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Контейнер для всех таблиц -->
        <TabControl Margin="10 70 10 10">

            <!-- Вкладка 1: Оборудование -->
            <TabItem Header="📦 Оборудование">
                <DataGrid ItemsSource="{Binding EquipmentList}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                        <DataGridTextColumn Header="Инв.номер" Binding="{Binding InventoryNumber}" Width="100"/>
                        <DataGridTextColumn Header="Аудитория" Binding="{Binding ClassroomId}" Width="80"/>
                        <DataGridTextColumn Header="Ответственный" Binding="{Binding ResponsibleUserId}" Width="120"/>
                        <DataGridTextColumn Header="Стоимость" Binding="{Binding Cost}" Width="100"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding StatusId}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка 2: Пользователи -->
            <TabItem Header="👥 Пользователи">
                <DataGrid ItemsSource="{Binding UserList}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="100"/>
                        <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="120"/>
                        <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="120"/>
                        <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="100"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка 3: Аудитории -->
            <TabItem Header="🏫 Аудитории">
                <DataGrid ItemsSource="{Binding ClassroomList}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="250"/>
                        <DataGridTextColumn Header="Сокращение" Binding="{Binding ShortName}" Width="100"/>
                        <DataGridTextColumn Header="Ответственный" Binding="{Binding ResponsibleUserId}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка 4: Расходные материалы -->
            <TabItem Header="🖨️ Расходники">
                <DataGrid ItemsSource="{Binding ConsumableList}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                        <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="80"/>
                        <DataGridTextColumn Header="Дата поступления" Binding="{Binding ArrivalDate}" Width="120"/>
                        <DataGridTextColumn Header="Тип" Binding="{Binding ConsumableTypeId}" Width="100"/>
                        <DataGridTextColumn Header="Ответственный" Binding="{Binding ResponsibleUserId}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка 5: Статусы -->
            <TabItem Header="📈 Статусы">
                <DataGrid ItemsSource="{Binding StatusList}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Статус" Binding="{Binding Name}" Width="250"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка 6: Типы оборудования -->
            <TabItem Header="💻 Типы">
                <DataGrid ItemsSource="{Binding EquipmentTypeList}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Тип оборудования" Binding="{Binding Name}" Width="250"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка 7: Модели -->
            <TabItem Header="🖥️ Модели">
                <DataGrid ItemsSource="{Binding ModelList}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Название модели" Binding="{Binding Name}" Width="250"/>
                        <DataGridTextColumn Header="Тип оборудования" Binding="{Binding EquipmentTypeId}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка 8: Типы расходников -->
            <TabItem Header="📊 Типы расходников">
                <DataGrid ItemsSource="{Binding ConsumableTypeList}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Тип" Binding="{Binding Name}" Width="250"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка 9: Характеристики -->
            <TabItem Header="📝 Характеристики">
                <DataGrid ItemsSource="{Binding ConsumableCharacteristicList}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Расходник ID" Binding="{Binding ConsumableId}" Width="80"/>
                        <DataGridTextColumn Header="Характеристика" Binding="{Binding CharacteristicName}" Width="200"/>
                        <DataGridTextColumn Header="Значение" Binding="{Binding CharacteristicValue}" Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка 10: Разработчики -->
            <TabItem Header="👨‍💻 Разработчики">
                <DataGrid ItemsSource="{Binding DeveloperList}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Разработчик" Binding="{Binding Name}" Width="300"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка 11: Направления -->
            <TabItem Header="🎯 Направления">
                <DataGrid ItemsSource="{Binding DirectionList}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Направление" Binding="{Binding Name}" Width="300"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка 12: ПО -->
            <TabItem Header="🛠️ ПО">
                <DataGrid ItemsSource="{Binding SoftwareList}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Название ПО" Binding="{Binding Name}" Width="200"/>
                        <DataGridTextColumn Header="Разработчик" Binding="{Binding DeveloperId}" Width="120"/>
                        <DataGridTextColumn Header="Версия" Binding="{Binding Version}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка 13: Инвентаризации -->
            <TabItem Header="📋 Инвентаризации">
                <DataGrid ItemsSource="{Binding InventoryList}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="250"/>
                        <DataGridTextColumn Header="Дата начала" Binding="{Binding StartDate}" Width="120"/>
                        <DataGridTextColumn Header="Дата окончания" Binding="{Binding EndDate}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка 14: Элементы инвентаризации -->
            <TabItem Header="✓ Инвентаризация">
                <DataGrid ItemsSource="{Binding InventoryItemList}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Инвентаризация" Binding="{Binding InventoryId}" Width="100"/>
                        <DataGridTextColumn Header="Оборудование" Binding="{Binding EquipmentId}" Width="100"/>
                        <DataGridTextColumn Header="Проверил" Binding="{Binding CheckedByUserId}" Width="120"/>
                        <DataGridTextColumn Header="Дата" Binding="{Binding CheckedAt}" Width="120"/>
                        <DataGridTextColumn Header="Комментарий" Binding="{Binding Comment}" Width="250"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Вкладка 15: Сетевые настройки -->
            <TabItem Header="🌐 Сеть">
                <DataGrid ItemsSource="{Binding NetworkSettingList}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Оборудование" Binding="{Binding EquipmentId}" Width="100"/>
                        <DataGridTextColumn Header="IP адрес" Binding="{Binding IpAddress}" Width="120"/>
                        <DataGridTextColumn Header="Маска" Binding="{Binding SubnetMask}" Width="120"/>
                        <DataGridTextColumn Header="Шлюз" Binding="{Binding Gateway}" Width="120"/>
                        <DataGridTextColumn Header="DNS1" Binding="{Binding Dns1}" Width="120"/>
                        <DataGridTextColumn Header="DNS2" Binding="{Binding Dns2}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

        </TabControl>

        <!-- Панель инструментов внизу -->
        <Border Height="50" Background="#E0E0E0" VerticalAlignment="Bottom">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Content="➕ Добавить" Width="100" Margin="0 0 10 0"/>
                <Button Content="✏️ Редактировать" Width="120" Margin="0 0 10 0"/>
                <Button Content="🗑️ Удалить" Width="100" Margin="0 0 10 0"/>
                <Button Content="📥 Экспорт" Width="100" Margin="0 0 10 0"/>
                <TextBox Width="200"  Margin="0 0 10 0"/>
                <Button Content="🔍 Поиск" Width="80"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>