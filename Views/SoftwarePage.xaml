<Page x:Class="AdminUP.Views.SoftwarePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="clr-namespace:AdminUP.Converters"
      Title="Программное обеспечение"
      Loaded="Page_Loaded">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Добавить" Width="100" Click="AddButton_Click"/>
            <Button Content="Редактировать" Width="120" Click="EditButton_Click"/>
            <Button Content="Удалить" Width="100" Click="DeleteButton_Click"/>
            <TextBox x:Name="SearchTextBox" Width="200" Margin="10 0"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Найти" Width="80" Click="SearchButton_Click"/>
            <Button Content="Очистить" Width="80" Margin="5,0,0,0" Click="ClearButton_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="1" Margin="10"
                  ItemsSource="{Binding FilteredSoftwareList}"
                  SelectedItem="{Binding SelectedSoftware}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  MouseDoubleClick="DataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Название ПО" Binding="{Binding Name}" Width="220"/>
                <DataGridTextColumn Header="Разработчик" Binding="{Binding DeveloperName}" Width="180"/>
                <DataGridTextColumn Header="Версия" Binding="{Binding Version}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="0" Grid.RowSpan="2"
                Background="#88000000">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
                <TextBlock Text="Загрузка данных..." Foreground="White" Margin="0 10 0 0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
