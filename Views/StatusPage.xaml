<Page x:Class="AdminUP.Views.StatusPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Loaded="Page_Loaded"
      d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Добавить" Width="100" Click="AddButton_Click"/>
            <Button Content="Редактировать" Width="120" Click="EditButton_Click" Margin="5,0,0,0"/>
            <Button Content="Удалить" Width="100" Click="DeleteButton_Click" Margin="5,0,0,0"/>

            <TextBox x:Name="SearchTextBox" Width="220" Margin="15,0,0,0"
             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>

            <Button Content="Найти" Width="80" Margin="5,0,0,0" Click="SearchButton_Click"/>
            <Button Content="Очистить" Width="90" Margin="5,0,0,0" Click="ClearButton_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding FilteredStatusList}"
                  SelectedItem="{Binding SelectedStatus}"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  MouseDoubleClick="DataGrid_MouseDoubleClick"/>
    </Grid>
</Page>
