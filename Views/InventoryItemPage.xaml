<Page x:Class="AdminUP.Views.InventoryItemPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Элементы инвентаризации">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <ComboBox x:Name="InventoryComboBox" Width="240"/>

            <Button Content="Отметить" Width="100"/>
            <Button Content="Комментарий" Width="120"/>
            <TextBox x:Name="SearchTextBox" Width="220" Margin="0,0,10,0"/>

        </StackPanel>

        <DataGrid Grid.Row="1" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50"/>
                <DataGridTextColumn Header="Инвентаризация" Width="100"/>
                <DataGridTextColumn Header="Оборудование" Width="100"/>
                <DataGridTextColumn Header="Проверил" Width="120"/>
                <DataGridTextColumn Header="Дата проверки" Width="120"/>
                <DataGridTextColumn Header="Комментарий" Width="250"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>