<Page x:Class="AdminUP.Views.InventoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Инвентаризации">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Создать" Width="100"/>
            <Button Content="Начать" Width="100"/>
            <Button Content="Завершить" Width="100"/>
            <Button Content="Отчет" Width="100"/>
            <DatePicker Width="120" Margin="10 0"/>
            <DatePicker Width="120"/>
        </StackPanel>

        <DataGrid Grid.Row="1" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50"/>
                <DataGridTextColumn Header="Название" Width="250"/>
                <DataGridTextColumn Header="Дата начала" Width="120"/>
                <DataGridTextColumn Header="Дата окончания" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>