<Page x:Class="AdminUP.Views.NetworkSettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Сетевые настройки">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="Добавить" Width="100"/>
            <Button Content="Редактировать" Width="120"/>
            <Button Content="Удалить" Width="100"/>
            <Button Content="Проверить сеть" Width="120"/>
            <TextBox Width="200" Margin="10 0"/>
        </StackPanel>

        <DataGrid Grid.Row="1" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50"/>
                <DataGridTextColumn Header="Оборудование" Width="100"/>
                <DataGridTextColumn Header="IP адрес" Width="120"/>
                <DataGridTextColumn Header="Маска" Width="120"/>
                <DataGridTextColumn Header="Шлюз" Width="120"/>
                <DataGridTextColumn Header="DNS1" Width="120"/>
                <DataGridTextColumn Header="DNS2" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>